<!DOCTYPE html>
<head>
  <meta charset="UTF-8">
  <title>REMP</title>
  <link rel="shortcut icon" href="/img/favicon.ico">
  <link rel="stylesheet" href="/build/remp.css">
  <link rel="stylesheet" href="/css/black-tie.min.css">
  <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Source+Code+Pro:200">
</head>
<body class="gray">
  <header>
    <h1 class="logo"><img src="/img/logo.png" alt="REMP logo"></h1>
    <nav class="menu">
      <a href="#"><i class="btl bt-bars bt-2x"></i></a>
    </nav>
  </header>
  <section class="container">
    <section class="item list">
      <h2>Friends</h2>
      <div id="me-component">{{{me}}}</div>
      <div id="friends-component">{{{friends}}}</div>
      <ul>
        <li><a href="#"><i class="btl bt-fw bt-envelope"></i>Send Invitation</a></li>
        <li><a href="#"><i class="btl bt-fw bt-plus"></i>Add Friend</a></li>
      </ul>
    </section>
    <section class="item list">
      <h2>Playlists</h2>
      <div id="playlists-component">{{{playlists}}}</div>
      <div id="searches-component">{{{searches}}}</div>
      <div id="inbox-component">{{{inbox}}}</div>
      <ul>
        <li><a href="#"><i class="btl bt-fw bt-search-plus"></i>Search</a></li>
        <li><a href="#"><i class="btl bt-fw bt-plus"></i>Add Playlist</a></li>
      </ul>
    </section>
    <section class="item list">
      <h2>Musics</h2>
      <div id="musics-component">{{{musics}}}</div>
      <ul>
        <li><a href="#"><i class="btl bt-fw bt-pencil"></i>Edit</a></li>
        <li><a href="#"><i class="btl bt-fw bt-redo"></i>Reload</a></li>
      </ul>
    </section>
    <section class="item video">
      <div id="video-frame">
        <div id="video"></div>
      </div>
      <ul>
        <li><a href="#"><i class="btl bt-fast-reverse"></i></a></li><!--
     --><li><a href="#"><i class="btl bt-play"></i></a></li><!--
     --><li><a href="#"><i class="btl bt-fast-forward"></i></a></li><!--
     --><li><a href="#"><i class="btl bt-repeat"></i></a></li><!--
     --><li><a href="#"><i class="btl bt-volume-up"></i></a></li><!--
     --><li><a href="#"><i class="btl bt-reply"></i></a></li><!--
     --><li><a href="#"><i class="btl bt-share"></i></a></li>
      </ul>
    </section>
  </section>
  <script id="initial-data" type="text/plain" data-json="{{initialData}}"></script>
  <script src="/build/client.bundle.js"></script>
  <script src="https://www.youtube.com/iframe_api"></script>
</body>
</html>
