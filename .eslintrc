{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "YT": true
  },
  "ecmaFeatures": {
    "modules": true,
    "arrowFunctions": true,
    "classes": true,
    "defaultParams": true,
    "blockBindings": true,
    "forOf": true,
    "templateStrings": true,
    "jsx": true
  },
  "rules": {
    "strict": 0,
    "no-var": 1,
    "no-console": 0,
    "no-alert": 1,
    "no-multi-spaces": 0,
    "indent": [2, 2],
    "quotes": [2, "single"],
    "no-unused-vars": 1,
    "key-spacing": 0,
    "max-len": [1, 120, 2],
    "max-params": [1, 5],
    "max-statements": [1, 12],
    "react/jsx-uses-vars": 1
  },
  "plugins": [
    "react"
  ]
}
