{
  "name": "remp-ui",
  "version": "1.0.0",
  "description": "",
  "main": "lib/server.jsx",
  "dependencies": {
    "body-parser": "^1.12.3",
    "express": "^4.12.3",
    "fetchr": "^0.5.2",
    "superagent": "^1.2.0"
  },
  "devDependencies": {
    "babel": "^5.2.6",
    "babelify": "^6.0.2",
    "browserify": "^10.1.3",
    "browserify-shim": "^3.8.6",
    "fitvids": "git://github.com/hikarock/FitVids.js.git#add-package-json",
    "foreman": "^1.3.0",
    "fs": "0.0.2",
    "handlebars": "^3.0.3",
    "json-server": "^0.7.4",
    "nib": "^1.1.0",
    "react": "^0.13.3",
    "stylus": "^0.51.1",
    "watchify": "^3.2.1"
  },
  "browser": {
    "jquery": "./public/js/jquery.min.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "$"
  },
  "scripts": {
    "build": "babel src/jsx -d lib && npm run build-client",
    "build-client": "mkdir -p public/build && browserify -t babelify src/jsx/client.jsx -o public/build/client.bundle.js && npm run build-stylus",
    "build-stylus": "stylus -u ./node_modules/nib/lib/nib --sourcemap-inline --compress -o public/build/ src/styl/*.styl",
    "watch": "npm run watch-server & npm run watch-client & npm run watch-stylus",
    "watch-server": "babel -w src/jsx -d lib",
    "watch-client": "mkdir -p public/build && watchify -t babelify src/jsx/client.jsx -o public/build/client.bundle.js",
    "watch-stylus": "stylus -u ./node_modules/nib/lib/nib -w --sourcemap-inline --compress -o public/build/ src/styl/*.styl",
    "start": "nf start -p 8090"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remp-team/remp-ui"
  },
  "author": "hikarock <i@hika69.com> (http://blog.hika69.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/remp-team/remp-ui/issues"
  },
  "homepage": "https://github.com/remp-team/remp-ui"
}
